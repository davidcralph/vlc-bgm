{
    "private": true,
    "name": "vlc-bgm",
    "version": "1.1.0",
    "author": "David Ralph",
    "license": "MIT",
    "main": "src/index.js",
    "bugs": {
        "url": "https://github.com/davidcralph/vlc-bgm/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/davidcralph/vlc-bgm"
    },
    "dependencies": {
        "bulma": "^0.9.3",
        "cookie-session": "^2.0.0",
        "eta": "^1.12.3",
        "express": "^4.17.3",
        "express-rate-limit": "^6.3.0",
        "ini": "^2.0.0",
        "leekslazylogger": "^4.1.4",
        "node-vlc-http": "^1.2.0",
        "socket.io": "^4.4.1"
    },
    "devDependencies": {
        "pkg": "^5.5.2"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.6",
        "utf-8-validate": "^5.0.8"
    },
    "bin": "src/index.js",
    "pkg": {
        "assets": [
            "src/views/**/*",
            "src/public/**/*"
        ]
    },
    "scripts": {
        "start": "cd src && node index.js",
        "build": "npm run build-win && npm run build-linux && npm run build-mac",
        "build-win": "pkg --compress Brotli -t node17-win-x64 --o dist/vlc-bgm.exe .",
        "build-linux": "pkg --compress Brotli -t node17-linux-x64 --o dist/vlc-bgm .",
        "build-mac": "pkg --compress Brotli -t node17-macos-x64 --o dist/vlc-bgm ."
    }
}
